<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pooja.languageapp" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NumbersActivity"
            android:label="@string/title_activity_numbers" >
        </activity>
        <activity
            android:name=".FamilyActivity"
            android:label="@string/title_activity_family" >
        </activity>
        <activity
            android:name=".PhrasesActivity"
            android:label="@string/title_activity_phrases" >
        </activity>
        <activity
            android:name=".ColorsActivity"
            android:label="@string/title_activity_colors" >
        </activity>
        <activity android:name=".firstpage" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TranslateActivity"
            android:label="Translate" >
        </activity>
    </application>

</manifest>
